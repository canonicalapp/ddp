# Test Database Configuration
# Copy this file to .env.test and modify as needed for your test environment

# Source database (the reference database for testing)
SOURCE_DB_HOST=localhost
SOURCE_DB_PORT=5432
SOURCE_DB_NAME=ddp_test_source
SOURCE_DB_USER=postgres
SOURCE_DB_PASSWORD=root
SOURCE_DB_SCHEMA=dev

# Target database (the one to be updated for testing)
TARGET_DB_HOST=localhost
TARGET_DB_PORT=5432
TARGET_DB_NAME=ddp_test_target
TARGET_DB_USER=postgres
TARGET_DB_PASSWORD=root
TARGET_DB_SCHEMA=prod

# Gen command database credentials (for single database operations)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ddp_test_runner
DB_USER=postgres
DB_PASSWORD=root
DB_SCHEMA=dev

# Test Data Scripts
TEST_DATA_SCRIPT_BASIC=test-database-setup.sql
TEST_DATA_SCRIPT_MID=test-database-mid-complexity.sql
TEST_DATA_SCRIPT_HIGH=test-database-high-complexity-simple.sql

# Test Output Directory
TEST_OUTPUT_DIR=output/test-runner

# Test Timeout (in milliseconds)
TEST_TIMEOUT=60000
